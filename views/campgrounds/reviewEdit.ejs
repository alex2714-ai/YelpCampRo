<% layout('layouts/boilerplate.ejs') %>
<h1 class="offset-3">Update your review</h1>
<div class="col-6 offset-3">
    <form action="/campgrounds/<%=campgrounds.id%>/reviews/<%=review._id%>?_method=PUT" method="post"
        class="validated-form" novalidate>
        <div class="mb-3">
            <div class="rate">
                <input type="radio" id="star5" name="review[rating]" value="5" <% if (review.rating === 5) { %> checked
                    <% } %> />
                <label for="star5" title="text">5 stars</label>
                <input type="radio" id="star4" name=" review[rating]" value="4" <% if (review.rating === 4) { %> checked
                    <% } %> />
                <label for="star4" title="text">4 stars</label>
                <input type="radio" id="star3" name="review[rating]" value="3" <% if (review.rating === 3) { %> checked
                    <% } %> />
                <label for="star3" title="text">3 stars</label>
                <input type="radio" id="star2" name="review[rating]" value="2" <% if (review.rating === 2) { %> checked
                    <% } %> />
                <label for="star2" title="text">2 stars</label>
                <input type="radio" id="star1" name="review[rating]" value="1" <% if (review.rating === 1) { %> checked
                    <% } %>>
                <label for="star1" title="text">1 star</label>
            </div>
        </div>
        <div class="mb-3">

            <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3"
                placeholder="Describe your experience(optional)"><%=review.body %> </textarea>
        </div>
        <div>
            <button class="btn btn-primary">Submit a Review</button>
        </div>
    </form>
</div>